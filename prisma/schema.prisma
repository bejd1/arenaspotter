datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URL")
}

generator client {
  provider = "prisma-client-js"
}


model Post {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  title    String
  body     String
}

enum Role {
  USER
  ADMIN
}

model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  name          String?
  email         String?   @unique
  image         String?
  password      String?
  role          Role     @default(USER)
}