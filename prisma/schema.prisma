datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URL")
}

generator client {
  provider = "prisma-client-js"
}


model Post {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  city        String
  address     String
  email       String
  image       String
  image2      String
  image3      String
  people      Int
  football    String?
  basketball  String?
  netball     String?
  cost        Int
  author      String
  status      String
}

enum Role {
  USER
  ADMIN
}

model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  name          String?
  email         String?   @unique
  image         String?
  password      String?
  role          Role     @default(USER)
}

model ReportArena {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  arenaId       String
  email         String  
  title         String
  message       String
}